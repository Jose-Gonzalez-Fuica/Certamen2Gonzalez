<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".RecoleccionEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="252dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </FrameLayout>

        <Button
            android:id="@+id/button7"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="dialogo_doble"
            android:text="Eliminar" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="307dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etFechaRecoleccionEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:hint="fecha"
        android:inputType="date"
        android:maxLines="1" />

    <Spinner
        android:id="@+id/spCodigoPlantaEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1" />

    <Spinner
        android:id="@+id/spRutCientificoEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/txtComentarioRecoleccionEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:hint="Comentario"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:layout_weight="1"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:onClick="TomarFoto"
        android:text="Foto" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:onClick="Editar"
        android:text="Editar" />
</LinearLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/ivFotoRecoleccionEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />
</FrameLayout>
</LinearLayout>