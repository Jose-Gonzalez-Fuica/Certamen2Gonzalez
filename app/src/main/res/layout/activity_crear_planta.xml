<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CrearPlanta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtCodigoPlanta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Codigo"
            android:inputType="textPersonName"
           />

        <EditText
            android:id="@+id/txtNombrePlanta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/txtNombreCientificoPlanta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nombre Cientifico" />

        <EditText
            android:id="@+id/txtUsoPlanta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="uso" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="19dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btFotoPlanta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:onClick="TomarFoto"
            android:text="foto"
            app:icon="@android:drawable/ic_menu_camera" />

        <Button
            android:id="@+id/btCrearPlanta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:onClick="CrearPlanta"
            android:text="crear"
            app:icon="@android:drawable/ic_input_add" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivFotoPlanta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            tools:srcCompat="@tools:sample/avatars" />
    </FrameLayout>

</LinearLayout>